<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:startColor="#00ac9e"
                android:endColor="#0e718b"/>
            <corners
                android:radius="8.47dp"/>
            <padding
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"
                android:left="10dp"/>



        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#00ac9e">

            </solid>
            <corners
                android:radius="8.47dp"/>
            <padding
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"
                android:left="10dp"/>
        </shape>
    </item>

</selector>